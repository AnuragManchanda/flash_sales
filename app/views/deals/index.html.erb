<p id="notice"><%= notice %></p>

<h1>Listing Deals</h1>

<table class='table table-striped table-bordered table-advance table-hover'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Is live</th>
      <th>Discription</th>
      <th>Price</th>
      <th>Discounted price</th>
      <th>Quantity</th>
      <th>Publish date</th>
      <th>Attachment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deals.each do |deal| %>
      <tr>
        <td><%= deal.title %></td>
        <td><%= deal.is_live %></td>
        <td><%= deal.discription %></td>
        <td><%= deal.price %></td>
        <td><%= deal.discounted_price %></td>
        <td><%= deal.quantity %></td>
        <td><%= deal.publish_date %></td>
        <td><%= deal.attachment %></td>
        <td><%= link_to 'Show', deal %></td>
        <td><%= link_to 'Edit', edit_deal_path(deal) %></td>
        <td><%= link_to 'Destroy', deal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

